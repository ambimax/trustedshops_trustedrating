<config>
    <modules>
        <Symmetrics_TrustedRating>
            <version>0.1.0</version>
        </Symmetrics_TrustedRating>
    </modules>
	<global>
		<helpers>
	        <trustedrating>
	            <class>Symmetrics_TrustedRating_Helper</class>
	        </trustedrating>
	    </helpers>
		<models>
			<trustedrating>
		    	<class>Symmetrics_TrustedRating_Model</class>
			</trustedrating>
		</models>
		<blocks>
            <trustedrating>
                <class>Symmetrics_TrustedRating_Block</class>
            </trustedrating>
		</blocks>
		<events>
            <admin_system_config_changed_section_trustedrating>
                <observers>
                    <symmetrics_trustedrating_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_TrustedRating_Model_Observer</class>
                        <method>changeTrustedRatingStatus</method>
                    </symmetrics_trustedrating_model_observer>
                </observers>
            </admin_system_config_changed_section_trustedrating>
		</events>
	</global>
	<frontend>
		<layout>
            <updates>
                <trustedrating>
                    <file>trustedrating.xml</file>
                </trustedrating>
            </updates>
        </layout>
	</frontend>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<trustedrating>
											<title>trustedrating</title>
										</trustedrating>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<admin>
    	<routers>
    		<adminhtml>
    			<args>
    				<modules>   				
    					<Symmetrics_TrustedRating_Admin before="Mage_Adminhtml">Symmetrics_TrustedRating_Admin</Symmetrics_TrustedRating_Admin>
    				</modules>
    			</args>
    		</adminhtml>
    	</routers>
    </admin>
	<default>
		<ratinglanguagelink>
			<de>https://www.trustedshops.com/bewertung/bewerten</de>
			<en>https://www.trustedshops.com/buyerfeedback/page/rate</en>
			<fr>https://www.trustedshops.com/evaluation/page/evaluer</fr>
			<es>https://www.trustedshops.com/evaluacion/pagina/evaluar</es>
		</ratinglanguagelink>
		<ratingemaillanguagelink>
			<de>https://www.trustedshops.com/bewertung/seite/bewerten</de>
			<en>https://www.trustedshops.com/buyerfeedback/page/rate</en>
			<fr>https://www.trustedshops.com/evaluation/page/evaluer</fr>
			<es>https://www.trustedshops.com/evaluacion/pagina/evaluar</es>
		</ratingemaillanguagelink>
		<soapapi>
			<url>https://www.trustedshops.de/ts/services/TsRating?wsdl</url>
		</soapapi>
	</default>
</config>